[Unit]
Description=Automatic Database Backup Service
After=network.target postgresql.service
Wants=postgresql.service

[Service]
User=cubinez85
Group=www-data
WorkingDirectory=/var/www/automatic_database_backup
Environment="PATH=/var/www/automatic_database_backup/venv/bin"
Environment="PYTHONPATH=/var/www/automatic_database_backup"

# Gunicorn будет слушать порт 8000
ExecStart=/var/www/automatic_database_backup/venv/bin/gunicorn \
    --workers 3 \
    --worker-class sync \
    --bind 127.0.0.1:8000 \
    --timeout 120 \
    --access-logfile /var/www/automatic_database_backup/logs/gunicorn-access.log \
    --error-logfile /var/www/automatic_database_backup/logs/gunicorn-error.log \
    wsgi:application

ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID

Restart=always
RestartSec=5

# Безопасность
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/var/www/automatic_database_backup/logs

[Install]
WantedBy=multi-user.target
